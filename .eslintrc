{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        
        
        "no-extra-semi":1,
        
        "indent": 0,
        "no-console": 0,
        // "indent": [2, 2],
        
        "linebreak-style": 0,
        
        "react/jsx-uses-react": "error",
        
        "react/jsx-uses-vars": "error",

        "react/prop-types": 0,

        "no-unused-vars": 0,

        "no-undef": 0,
        "no-unreachable": 0,
        
        "react/no-direct-mutation-state": 0,
        
        "no-case-declarations":0,

        "use-isnan": 0,

        "react/no-danger": 0
    }
}